<div class="container">
    <div class="row">
            <form action="/project/addProject" method="post" class="form-horizontal progectDurationForm" id="projectDurationForm"> 
                <legend><h1>Add Project Duration Details</h1></legend>
                <fieldset>
                    <div class="well col-lg-12 col-md-12 col-sm-12">
                      <div class="form-group">
                          <div class="col-lg-3 col-md-3 col-sm-12">
                              <h2>SIT PHASE</h2>
                          </div>
                          <div class="col-lg-3 col-md-3 col-sm-12">
                                <label for="projectName" class="control-label">START DATE</label>
                                <input type='date' class="form-control" name="sitStartDate">
                          </div>
                          <div class="col-lg-3 col-md-3 col-sm-12">
                                <label for="projectName" class="control-label">END DATE</label>
                                <input type='date' class="form-control" name="sitEndDate">
                          </div>
                      </div>
                    </div>
                     <div class="well col-lg-12 col-md-12 col-sm-12">
                      <div class="form-group">
                          <div class="col-lg-3 col-md-3 col-sm-12">
                              <h2>UAT PHASE</h2>
                          </div>
                          <div class="col-lg-3 col-md-3 col-sm-12">
                                <label for="projectName" class="control-label">START DATE</label>
                                <input type='date' class="form-control" name="uatStartDate">
                          </div>
                          <div class="col-lg-3 col-md-3 col-sm-12">
                                <label for="projectName" class="control-label">END DATE</label>
                                <input type='date' class="form-control" name="uatEndDate">
                          </div>
                      </div>
                    </div>
                     <div class="well col-lg-12 col-md-12 col-sm-12">
                      <div class="form-group">
                          <div class="col-lg-3 col-md-3 col-sm-12">
                              <h2>PRODUCTION PHASE</h2>
                          </div>
                          <div class="col-lg-3 col-md-3 col-sm-12">
                                <label for="projectName" class="control-label">START DATE</label>
                                <input type='date' class="form-control" name="prodStartDate">
                          </div>
                          <div class="col-lg-3 col-md-3 col-sm-12">
                                <label for="projectName" class="control-label">END DATE</label>
                                <input type='date' class="form-control" name="prodEndDate">
                          </div>
                      </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <button type="reset" onClick="goBack()" class="btn btn-primary pull-right cancel-btn">BACK</button>
                        </div>
                        <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <button type="submit" class="btn btn-primary project-next-btn">NEXT</button>
                        </div>
                    </div>
                    <div>
                        <input name="_csrf" class="form-control" type="hidden" value="{{ csrfToken }}">      
                    </div>
                </fieldset>
            </form>
        </div>
</div>
<script type="text/javascript" src="/javascripts/project.js "></script>
