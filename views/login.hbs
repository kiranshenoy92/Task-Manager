<div class="container">
    <div class="row vertical-center">
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-8 col-xs-offset-2 col-sm-offset-3  col-md-offset-3 col-lg-offset-4">
            <form action="/user/login" method="post" id="loginform" class="form-horizontal loginform"> 
                <legend><h1>Login</h1></legend>
                <fieldset>
                    {{#if hasError}}
                    
                        <div class="form-group">
                            <div class="alert alert-danger">
                                    {{messages}}
                            </div>
                        </div>          
                    {{/if}}
                    {{#if active}}    
                        <div class="form-group">
                            <div class="alert alert-success">
                                    {{active}}
                            </div>
                        </div>          
                    {{/if}}
                    <div class="form-group">
                        <label for="email" class="control-label">EMAIL</label>
                        <input id="email" type="email" name="email" class="form-control" placeholder="Email" />
                        <span id="emailmessage"></span>  
                    </div>
                    <div class="form-group  has-feedback">
                        <label for="password" class="control-label">PASSOWRD</label>
                        <input id="password" name="password" class="form-control" type="password" placeholder="Password" autocomplete="off">    
                        <i class="glyphicon glyphicon-eye-open form-control-feedback"></i>
                        <span id="passwordmessage"></span>  
                    </div>
                    <hr>
                    <div class="form-group">
                        <button class="btn btn-default loginbutton">LOGIN</button>
                        <p class="pull-right">
                            <a href="/user/resetPassword">Reset Password</a><br/>
                            <a href="/user/resendVerificationMail">Resend Verification Email</a>
                        </p>
                    </div>
                    <div>
                        <input name="_csrf" class="form-control" type="hidden" value="{{ csrfToken }}">      
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript" src="/javascripts/login.js "></script>