<div class="container">
    <div class="row">
            <form action="/project/addProject" method="post" class="form-horizontal progectDurationForm" id="projectDurationForm"> 
                <legend><h1>Add Project Employee Details</h1></legend>
                <fieldset>
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="projectManager" class="control-label">Project Manager</label>
                            <select id="managerID" class="form-control">
                                {{#each managers}}
                                    <option value="{{this._id}}">{{this.firstName}} {{this.lastName}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">

                        <div class="form-group">
                            <h4>Team Members</h4>
                            <span id="teamMembers">
                            </span> 
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <button type="reset" onClick="goBack()" class="btn btn-primary pull-right cancel-btn">BACK</button>
                        </div>
                        <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <button type="submit" class="btn btn-primary project-next-btn">NEXT</button>
                        </div>
                    </div>
                    <div>
                        <input name="_csrf" class="form-control" type="hidden" value="{{ csrfToken }}">      
                    </div>
                </fieldset>
            </form>
        </div>
</div>
<script type="text/javascript" src="/javascripts/project.js "></script>
