<div class="container">
    <div class="row vertical-center">
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-8 col-xs-offset-2 col-sm-offset-3  col-md-offset-3 col-lg-offset-4">
            <form action="/user/resetPassword" method="POST" id="loginform" class="form-horizontal loginform"> 
                <legend><h1>Reset Password</h1></legend>
                <fieldset>
                    {{#if errormessages}}
                    
                        <div class="form-group">
                            <div class="alert alert-danger">
                                    {{errormessages}}
                            </div>
                        </div>          
                    {{/if}}
                    {{#if successmessage}}    
                        <div class="form-group">
                            <div class="alert alert-success">
                                    {{successmessage}}
                            </div>
                        </div>          
                    {{/if}}
                    <div class="form-group">
                        <label for="email" class="control-label">EMAIL</label>
                        <input id="email" type="email" name="email" class="form-control" placeholder="Email" />
                        <span id="emailmessage"></span>  
                    </div>
                    
                    <hr>
                    <div class="form-group">
                        <button class="btn btn-default loginbutton">RESET</button>
                    </div>
                    <div>
                        <input name="_csrf" class="form-control" type="hidden" value="{{ csrfToken }}">      
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript" src="/javascripts/login.js "></script>