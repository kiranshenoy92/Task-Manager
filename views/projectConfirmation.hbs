<div class="container">
    <div class="row">
        <ul class="col-md-offset-2" id="progressbar">
            <li class="active">Project Details</li>
            <li class="active">Project Timelines</li>
            <li class="active">Employee Details</li>
            <li class="active">Confirm Details</li>
        </ul>
        <form action="/project/createProject" method="post" class="form-horizontal progectConfirmationForm" id="progectConfirmationForm"> 
            <fieldset>
                
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Progect Details</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-6">
                            <p><strong>Name: </strong>{{projectName}}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Type: </strong>{{projectType}}</p>
                        </div>
                        <div class="col-md-12">
                            <p><strong>Description: </strong>{{projectDescription}}</p>
                        </div>
                    </div>
                </div>

                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Progect Timelines</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h3>SIT:</h3>
                            </div>
                            <div class="col-md-4">
                                <p><strong>start Date: </strong>{{sitStartDate}}</p>
                            </div>
                            <div class="col-md-4">
                                <p><strong>End Date: </strong>{{sitEndDate}}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <h3>UAT:</h3>
                            </div>
                            <div class="col-md-4">
                                <p><strong>start Date: </strong>{{uatStartDate}}</p>
                            </div>
                            <div class="col-md-4">
                                <p><strong>End Date: </strong>{{uatEndDate}}</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <h3>Production:</h3>
                            </div>
                            <div class="col-md-4">
                                <p><strong>start Date: </strong>{{prodStartDate}}</p>
                            </div>
                            <div class="col-md-4">
                                <p><strong>End Date: </strong>{{prodEndDate}}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Employee Details</h3>
                    </div>
                    <div class="panel-body">
                        <p><strong>Manager: </strong>{{manager.firstName}} {{manager.lastName}}({{manager.employeeID}})</p>
                        <p><strong>Team Members: </strong>
                            {{#each teamMembers}}
                                   {{this.firstName}} {{this.lastName}}({{this.employeeID}}){{#if @last}}
                                   {{else}},{{/if}}
                            {{/each}}
                        </p>
                    </div>
                </div>
                
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <button type="reset" onClick="goBack()" class="btn btn-primary pull-right cancel-btn">BACK</button>
                    </div>
                    <div class=" col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <button type="submit" class="btn btn-primary project-next-btn">NEXT</button>
                    </div>
                </div>
                
                <div>
                    <input id="projectName" class="form-control" type="hidden" name="projectName" value="{{projectName}}"/>
                    <input id="projectType" class="form-control" type="hidden" name="projectType" value="{{projectType}}"/>
                    <input id="projectDescription" class="form-control" type="hidden" name="projectDescription" value="{{projectDescription}}"/>
                    <input id="uatStartDate" class="form-control" type="hidden" name="uatStartDate" value="{{uatStartDate}}"/>
                    <input id="uatEndDate" class="form-control" type="hidden" name="uatEndDate" value="{{uatEndDate}}"/>
                    <input id="sitStartDate" class="form-control" type="hidden" name="sitStartDate" value="{{sitStartDate}}"/>
                    <input id="sitEndDate" class="form-control" type="hidden" name="sitEndDate" value="{{sitEndDate}}"/>
                    <input id="prodStartDate" class="form-control" type="hidden" name="prodStartDate" value="{{prodStartDate}}"/>
                    <input id="prodEndDate" class="form-control" type="hidden" name="prodEndDate" value="{{prodEndDate}}"/>
                    <input id="managerID" class="form-control" type="hidden" name="managerID" value="{{managerID}}"/>
                    {{#each teamMembers}}
                        <input id="teamMembersID" class="form-control" type="hidden" name="teamMembersID" value="{{this._id}}"/>
                    {{/each}}
                    <input name="_csrf" class="form-control" type="hidden" value="{{ csrfToken }}">      
                </div>
            
            </fieldset>
        </form>
    </div>
</div>
<script type="text/javascript" src="/javascripts/project.js "></script>
